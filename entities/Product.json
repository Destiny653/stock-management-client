{
  "name": "Product",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Product name"
    },
    "category": {
      "type": "string",
      "enum": [
        "Electronics",
        "Clothing",
        "Food & Beverage",
        "Home & Garden",
        "Sports",
        "Beauty",
        "Office Supplies",
        "Other"
      ],
      "description": "Product category"
    },
    "description": {
      "type": "string",
      "description": "Product description"
    },
    "reorder_point": {
      "type": "number",
      "description": "Minimum stock level before reorder (applies per variant)"
    },
    "reorder_quantity": {
      "type": "number",
      "description": "Default quantity to reorder"
    },
    "location": {
      "type": "string",
      "description": "Primary warehouse or storage location"
    },
    "supplier_id": {
      "type": "string",
      "description": "Primary supplier ID"
    },
    "supplier_name": {
      "type": "string",
      "description": "Primary supplier name"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "discontinued"
      ],
      "default": "active"
    },
    "image_url": {
      "type": "string",
      "description": "Product image URL"
    },
    "variants": {
      "type": "array",
      "description": "Sellable product variants",
      "items": {
        "type": "object",
        "properties": {
          "sku": {
            "type": "string",
            "description": "Variant Stock Keeping Unit"
          },
          "attributes": {
            "type": "object",
            "description": "Variant attributes such as size, model, color, storage",
            "additionalProperties": {
              "type": "string"
            }
          },
          "unit_price": {
            "type": "number",
            "description": "Selling price for this variant"
          },
          "cost_price": {
            "type": "number",
            "description": "Cost price for this variant"
          },
          "stock": {
            "type": "number",
            "description": "Current stock quantity for this variant"
          },
          "status": {
            "type": "string",
            "enum": [
              "active",
              "low_stock",
              "out_of_stock",
              "discontinued"
            ],
            "default": "active"
          }
        },
        "required": [
          "sku",
          "attributes",
          "unit_price",
          "stock"
        ]
      }
    }
  },
  "required": [
    "name",
    "category",
    "variants"
  ]
}
